//- mixin for navigation sections
mixin navSection(title) 
  div(class=`${title} nav-section`)
    .section-header 
      h2= title
      button.button.toggle-section 
        <svg width="28" height="29" viewBox="0 0 28 29" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
        <path d="M0 28.96H28V0.96H0V28.96Z" fill="url(#pattern0)"/>
        <defs>
        <pattern id="pattern0" patternContentUnits="objectBoundingBox" width="1" height="1">
        <use xlink:href="#image0_14_2" transform="scale(0.015625)"/>
        </pattern>
        <image id="image0_14_2" width="64" height="64" xlink:href="data:image/png;base64,"/>
        </defs>
      </svg>
    block